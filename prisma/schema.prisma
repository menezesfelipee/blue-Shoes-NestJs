// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categorias {
  id      Int       @id @default(autoincrement())
  nome    String
  produto Produto[]
}

model Produto {
  id                Int         @id @default(autoincrement())
  nome              String
  descricao         String
  Categorias        Categorias? @relation(fields: [categoriasId], references: [id])
  categoriasId      Int?
  imagem            String
  quantidade_vendas Int
  logo              String
  storage           Storage[]
  Carrinho          Carrinho?   @relation(fields: [carrinhoId], references: [id])
  carrinhoId        Int?
}

model Storage {
  id         Int      @id @default(autoincrement())
  cor        String
  tamanho    Int
  quantidade Int
  Produto    Produto? @relation(fields: [produtoId], references: [id])
  produtoId  Int?
}

model Carrinho {
  id          Int       @id @default(autoincrement())
  produto     Produto[]
  quantidade  Int
  valor_total Float
  pedido      Pedido?
}

model Pedido {
  id               Int       @id @default(autoincrement())
  valor            Decimal
  cep              String
  endereco_entrega String
  Boleto           String
  carrinho         Carrinho? @relation(fields: [carrinhoId], references: [id])
  carrinhoId       Int?      @unique
  status           Status?   @relation(fields: [statusId], references: [id])
  statusId         Int?      @unique
  Usuario          Usuario?  @relation(fields: [usuarioId], references: [id])
  usuarioId        Int?
}

model Status {
  id     Int     @id @default(autoincrement())
  nome   Int
  pedido Pedido?
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  sobrenome String
  email     String
  senha     String
  pedido    Pedido[]
}
