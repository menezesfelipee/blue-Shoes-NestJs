// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  created DateTime @default(now())
  name String
  cpf String @unique
  cep String
  email String @unique
  password String
  wishlist Wishlist[]
  shoppingCart ShoppingCart[]
}

model ShoppingCart {
  id Int @id @default(autoincrement())
  product Product[]
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
}

model Wishlist {
  id Int @id @default(autoincrement())
  product Product[]
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
}

model Product {
  id Int @id @default(autoincrement())
  name String @unique
  image String
  logo String
  price Float
  storage Storage[]
  description String
  category Category[]
  shoppingCart    ShoppingCart?  @relation(fields: [shoppingCartId], references: [id])
  shoppingCartId  Int?
  wishlist    Wishlist?  @relation(fields: [wishlisttId], references: [id])
  wishlisttId  Int?
}

model Storage {
  id Int @id @default(autoincrement())
  size Int
  color String
  quantity Int
  product    Product?  @relation(fields: [productId], references: [id])
  productId  Int?
}

model Category {
  id Int @id @default(autoincrement())
  name String
  product Product[]
}